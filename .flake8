[flake8]
count = True
doctests = True
max-complexity = 10
max-line-length = 88

ignore =
    E203,
    E266,
    E501,
    W503,
    F403,
    F401
select = B,C,E,F,W,T4,B9
exclude =
    __pycache__,
    .eggs,
    .git,
    .tox,
    build,
    dist,
    .venv,
    venv,
    .tox,
    # Documentation and builds.
    build,
    docs,
    dist,
    # Miscellaneous files, eg. shell completions.
    docker,